{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Modbus Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/start_mock_server.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
